@page
@model lab_123_crud_05.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h6>Add a new product</h6>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="product.ProductName" class="control-label"></label>
            <input asp-for="product.ProductName" class="form-control" />
            <span asp-validation-for="product.ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="product.Price" class="control-label"></label>
            <input asp-for="product.Price" class="form-control" />
            <span asp-validation-for="product.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="product.Stock" class="control-label"></label>
            <input asp-for="product.Stock" class="form-control" />
            <span asp-validation-for="product.Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => p.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => p.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => p.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => p.Stock)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@p.ProductID">Edit</a> | |
                    <a asp-page="./Delete" asp-route-id="@p.ProductID">Delete</a>
                    <a asp-page="./OrderPage" asp-route-id="@p.ProductID">Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>



